        <div class="my-auto">
            <a href="/"><img src="/logo-footer.svg" alt="Logo" ></a>
        </div>

        <div class="mx-auto mt-10 text-center sm:text-start sm:mt-[12px]">
            <ul class="text-light">
                <li class="font-bold text-[1rem]">Mapa do site</li>
                <li class="text-[1rem] mt-[12px] hover:text-[#FFF082] ease-linear transform delay-50"><a href="/">Home</a></li>
