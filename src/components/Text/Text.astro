---
interface Props {
    title: string

}
const {title} = Astro.props;

---

<section class="mt-10 lg:mt-96 xl:mt-60" id="texto">
    <div class="container mx-auto bg-primary opacity-80 p-5 rounded-[5px] my-10 w-full lg:w-1/2">
        <h1 class="text-[#acbcfc] text-[1.8rem] font-bold">{title}</h1>
       <slot/>
    </div>
</section>